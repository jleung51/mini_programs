# Source files
SOURCES  = <source_files>

# Header files
HEADERS = \
	file1.h \
	file2.h

# g++ options
GCC = g++ -std=c++14

# g++ linking flags
GCC-LFLAGS = -Wall -Wextra -Wmissing-declarations -Werror

# Clang compilation options
CLANG = clang++-3.5 -std=c++14 -Werror -fshow-source-location -fshow-column -fcaret-diagnostics -fcolor-diagnostics -fdiagnostics-show-option

# Output filename
OUTPUT = output

#####
###
#
# 'Make' commands
#
###
#####

# $ 'make' or 'make help'
help:
	# INSTRUCTIONS:
	#   To test ___, run: make ___
	#   To remove compiled output files, run: make clean

# $ make <output_name>
<output_name>: $(SOURCES) $(HEADERS)
	$(GCC) $(GCC-LFLAGS) $(SOURCES) -o $(OUTPUT)
	# To execute the program, run: ./$(OUTPUT)

# $ make <custom>
<custom>: <source_files>
	<command>

# $ make clean
# Removes created files
clean:
	rm -f $(OUTPUT) *.o *~
