# Source files
SOURCES  = <source_files>

# Header files
HSOURCES = <header_files>

# Compiler options
CFLAGS = -std=c11 -g -Wall

# Output filename
OUTPUT = output

#####
###
#
# 'Make' commands
#
###
#####

# $ 'make' or 'make help'
help:
	# INSTRUCTIONS:
	#   To test ___, run: make ___
	#   To test memory allocation, run: make memchk
	#   To remove compiled output files, run: make clean

# $ make <output_name>
<output_name>: $(SOURCES) $(HSOURCES)
	gcc $(CFLAGS) $(SOURCES) -o $(OUTPUT) -lm
	# To execute the program, run: ./$(OUTPUT)

# $ make memchk
memchk: $(SOURCES) $(HSOURCES)
	make <output_name>
	valgrind --leak-check=full ./$(OUTPUT)

# $ make <custom>
<custom>: <source_files>
	<command>

# $ make clean
# Removes created files
clean:
	rm -f $(OUTPUT) *.o *~
