# Source files
SOURCES  = <source_files>

# Header files
HEADERS = \
	file1.h \
	file2.h

# gcc options
GCC = gcc -std=c11 -Wall

# Compiler options
CFLAGS = -c

# Output filename
OUTPUT = output

#####
###
#
# 'Make' commands
#
###
#####

# $ 'make' or 'make help'
help:
	# INSTRUCTIONS:
	#   To test ___, run: make ___
	#   To test memory allocation, run: make memchk
	#   To remove compiled output files, run: make clean

# $ make <output_name>
<output_name>: $(SOURCES) $(HEADERS)
	$(GCC) $(CFLAGS) $(SOURCES) -o $(OUTPUT)
	# To execute the program, run: ./$(OUTPUT)

# $ make memchk
memchk: $(SOURCES) $(HEADERS)
	make <output_name>
	valgrind --leak-check=full ./$(OUTPUT)

# $ make <custom>
<custom>: <source_files>
	<command>

# $ make clean
# Removes created files
clean:
	rm -f $(OUTPUT) *.o *~
