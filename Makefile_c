# Header files
HEADERS = \
	file1.h \
	file2.h

# gcc options
GCC = gcc -std=c11 -Wall

# Compiler options
CFLAGS = -c

# Output filename
OUTPUT = output

#####
###
#
# 'Make' commands
#
###
#####

# $ 'make' or 'make help'
help:
	# INSTRUCTIONS:
	#   To test ___, run: make ___
	#   To test memory allocation, run: make memchk
	#   To remove compiled output files, run: make clean

# Executed whenever an object file is out of date
# Symbols:
#   % refers to any character(s)
#   $< refers to the first item in the dependency list
%.o: %.cpp $(HEADERS)  #TODO Replace %.cpp with the path to the .cpp file
	$(GCC) $(CFLAGS) $<

# $ make <output_name>
<output_name>: file1.o file2.o
	$(GCC) file1.o file2.o -o $(OUTPUT)
	# To execute the program, run: ./$(OUTPUT)

# $ make memchk
memchk: file1.o file2.o
	make <output_name>
	valgrind --leak-check=full ./$(OUTPUT)

# $ make <custom>
<custom>: <source_files>
	<command>

# $ make clean
# Removes created files
clean:
	rm -f $(OUTPUT) *.o *~
